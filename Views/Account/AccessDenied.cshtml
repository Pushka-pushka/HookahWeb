@{
    ViewData["Title"] = "Доступ запрещен";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card mt-5">
                <div class="card-header bg-danger text-white">
                    <h3>Доступ запрещен</h3>
                </div>
                <div class="card-body">
                    <p class="text-danger">У вас недостаточно прав для доступа к этой странице.</p>
                    
                    @if (!string.IsNullOrEmpty(ViewBag.ReturnUrl))
                    {
                        <p>Запрошенная страница: <code>@ViewBag.ReturnUrl</code></p>
                    }

                    <div class="mt-3">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <p>Вы вошли как: <strong>@User.Identity.Name</strong></p>
                            
                            @if (User.IsInRole("admin"))
                            {
                                <a asp-area="Admin" asp-controller="Home" asp-action="Index" 
                                   class="btn btn-primary">Перейти в панель администратора</a>
                            }
                            else
                            {
                                <p>Ваша роль не имеет доступа к административной панели.</p>
                                <a asp-controller="Home" asp-action="Index" 
                                   class="btn btn-secondary">На главную</a>
                            }
                            
                            <a asp-controller="Account" asp-action="Logout" 
                               class="btn btn-outline-secondary ms-2">Выйти</a>
                        }
                        else
                        {
                            <p>Для доступа необходимо войти в систему.</p>
                            <a asp-controller="Account" asp-action="Login" 
                               asp-route-returnUrl="@ViewBag.ReturnUrl" 
                               class="btn btn-primary">Войти</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>